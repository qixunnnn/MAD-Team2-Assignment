<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2D2C"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/editText_UsernameNew"
        android:layout_width="279dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="228dp"
        android:background="#524F4E"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#F4F3F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="444dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/DarkCyan"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="368dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="444dp"
        android:background="@color/DarkCyan"
        android:text="Create"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <EditText
        android:id="@+id/editText_PasswordNew2"
        android:layout_width="279dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="364dp"
        android:background="#524F4E"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#F6F1F1"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="512dp"
        android:background="#00F1EDED"
        android:text="Back to login"
        android:textColor="#FFFFFF"
        android:textSize="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="232dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_android_black_24dp" />

    <EditText
        android:id="@+id/editText_PasswordNew"
        android:layout_width="279dp"
        android:layout_height="43dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="296dp"
        android:background="#524F4E"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#F6F1F1"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/passwordBtn"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="300dp"
        android:background="#524F4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_view" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="215dp"
        android:layout_height="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011"
        app:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/confirmpassBtn"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="368dp"
        android:background="#524F4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_view" />

</androidx.constraintlayout.widget.ConstraintLayout>