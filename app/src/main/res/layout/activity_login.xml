<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2D2C"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".LoginActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo3"
        android:layout_marginTop="80dp"
        />

    <ImageView
        android:id="@+id/profilelogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/profile"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/imageView"
        />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@id/profilelogo"
        android:layout_below="@id/imageView"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:background="#524F4F"
        android:hint="Username"
        android:textColor="@color/White"
        android:textColorHint="#F3F3F3"
        android:paddingLeft="15dp"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/passwordLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/profilelogo"
        />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@id/profilelogo"
        android:layout_below="@id/editText_username"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:background="#524F4F"
        android:hint="Password"
        android:textColor="@color/White"
        android:textColorHint="#F3F3F3"
        android:paddingLeft="15dp"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/checkBox_RememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="35dp"
        android:buttonTint="@color/White"
        android:text="Remember Me?"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFD"
        android:textColorLink="#FDFDFD"
        android:layout_below="@id/editText_password"
        />

    <CheckBox
        android:id="@+id/checkBox_Stayloggedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/checkBox_RememberMe"
        android:layout_marginLeft="25dp"
        android:buttonTint="@color/White"
        android:text="Stay logged in"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FDFDFD"
        android:textColorLink="#FDFDFD"
        android:layout_below="@id/editText_password"
        android:layout_centerHorizontal="true"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/DarkCyan"
        app:cardCornerRadius="25dp"
        android:layout_below="@id/checkBox_RememberMe"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:background="@color/DarkCyan"
        android:text="Login"
        android:textColor="@color/White"
        android:layout_below="@id/checkBox_RememberMe"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView_NewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="New user? Sign up here"
        android:textColor="#EDE9E9"
        android:layout_below="@id/loginButton"
        android:gravity="center"
        />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>